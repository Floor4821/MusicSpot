<Window x:Class="MusicSpot.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        ResizeMode="NoResize"
        xmlns:local="clr-namespace:MusicSpot"
        mc:Ignorable="d"
        Title="Register" Height="700" Width="536">
    <Canvas Margin="0,0,0,-6">
        <TextBlock TextWrapping="Wrap" FontSize="36" Canvas.Left="102" Canvas.Top="37" HorizontalAlignment="Left" VerticalAlignment="Center" Width="332"><Run Language="nl-be" Text="Create new Account"/></TextBlock>
        <TextBlock TextWrapping="Wrap" FontSize="24" Canvas.Left="113" Canvas.Top="85"><Run Text="Add Profile Picture"/><Run Language="nl-be" Text=" (Optional)"/></TextBlock>
        <Image MouseLeftButtonDown="AddPfp" Source="https://i.postimg.cc/xThL7S2g/AddPfp.png" Height="278" Canvas.Left="132" Canvas.Top="119" Width="272" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock TextWrapping="Wrap" Height="35" Width="112" FontSize="24" Canvas.Left="39" Canvas.Top="425" HorizontalAlignment="Left" VerticalAlignment="Center"><Run Language="nl-be" Text="Username"/><Run Text=":"/></TextBlock>
        <TextBox Name="RegisterName" TextWrapping="Wrap" Width="334" Canvas.Left="160" Canvas.Top="427" Height="31" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBlock x:Name="LoginEmail" TextWrapping="Wrap" Height="35" Width="111" FontSize="24" Canvas.Left="44" Canvas.Top="524" HorizontalAlignment="Center" VerticalAlignment="Top"><Run Language="nl-be" Text="Password"/><Run Text=":"/></TextBlock>
        <PasswordBox x:Name="RegisterPass" Width="334" Height="29" Canvas.Left="160" Canvas.Top="530" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock TextWrapping="Wrap" Height="35" Width="66" FontSize="24" Canvas.Left="89" Canvas.Top="476" HorizontalAlignment="Center" VerticalAlignment="Top"><Run Language="nl-be" Text="Email:"/></TextBlock>
        <TextBox Name="RegisterMail" TextWrapping="Wrap" Width="334" Canvas.Left="160" Canvas.Top="480" Height="31" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Content="Create new Account" Background="#222222" Foreground="White" FontSize="20" Height="39" Canvas.Left="304" Canvas.Top="601" Width="190" HorizontalAlignment="Left" VerticalAlignment="Center" Click="CreateAccount"/>
    </Canvas>
</Window>

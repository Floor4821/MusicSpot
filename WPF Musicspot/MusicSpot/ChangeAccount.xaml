<Window x:Class="MusicSpot.ChangeAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicSpot"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="ChangeAccount" Height="450" Width="909">
    <Grid>
        <Label Name="EditorUpdate" Content="Normally, you can't read this" HorizontalAlignment="Left" Margin="32,28,0,0" VerticalAlignment="Top" Height="63" Width="471" FontSize="36"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="32,96,0,0" VerticalAlignment="Top" Height="44" Width="122" FontSize="24"/>
        <TextBox Name="Username" HorizontalAlignment="Left" Margin="159,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="402" FontSize="24"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="82,140,0,0" VerticalAlignment="Top" Height="44" Width="72" FontSize="24"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="40,184,0,0" VerticalAlignment="Top" Height="44" Width="114" FontSize="24"/>
        <TextBox Name="Email" HorizontalAlignment="Left" Margin="159,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="402" FontSize="24"/>
        <PasswordBox Name="Password" HorizontalAlignment="Left" Margin="159,189,0,0" VerticalAlignment="Top" Width="402" FontSize="24"/>
        <Label Content="Permission:" HorizontalAlignment="Left" Margin="25,256,0,0" VerticalAlignment="Top" Height="44" Width="129" FontSize="24"/>
        <Expander Name="AccessExpander" Visibility="Hidden" HorizontalAlignment="Left" Height="88" Header="Set Permission" Margin="159,270,0,0" VerticalAlignment="Top" Width="127" IsExpanded="True">
            <Canvas Width="122">
                <Button Click="ConfirmAdmin" Content="Admin" VerticalAlignment="Center" Width="107" Canvas.Left="10" Canvas.Top="10" HorizontalAlignment="Center"/>
                <Button Click="ConfirmUser" Content="User" Width="107" Canvas.Left="10" Canvas.Top="38" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Canvas>
        </Expander>
        <Image MouseLeftButtonDown="NewPFP" Source="https://i.postimg.cc/xThL7S2g/AddPfp.png" Margin="620,103,71,135"/>
        <Label Content="ProfilePicture" HorizontalAlignment="Left" Margin="654,58,0,0" VerticalAlignment="Top" Height="45" Width="150" FontSize="24"/>
        <Button Click="SubmitNewUser" Foreground="White" Background="#222222" Content="Submit" HorizontalAlignment="Left" Margin="769,369,0,0" VerticalAlignment="Top" Height="39" Width="118" FontSize="18"/>
    </Grid>
</Window>

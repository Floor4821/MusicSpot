<Window x:Class="MusicSpot.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicSpot"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="Login" Height="609" Width="536">
    <Canvas>
        <Image Source="https://i.postimg.cc/vZsp5kN2/defaultpfp.png" Stretch="Fill" Height="242" Canvas.Left="152" Canvas.Top="105" Width="247" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Height="51" Width="361" FontSize="36" Canvas.Left="95" Canvas.Top="36"><Run Language="nl-be" Text="Login to your Account"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="88,391,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="35" Width="66" FontSize="24"><Run Language="nl-be" Text="Email:"/></TextBlock>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="334" Canvas.Left="159" Canvas.Top="395" Height="31" FontSize="16"/>
        <TextBlock Name="LoginEmail" HorizontalAlignment="Left" Margin="43,443,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="35" Width="111" FontSize="24"><Run Language="nl-be" Text="Password"/><Run Text=":"/></TextBlock>
        <PasswordBox Name="LoginPassword" HorizontalAlignment="Center" VerticalAlignment="Top" Width="334" Height="29" Canvas.Left="159" Canvas.Top="449" FontSize="16"/>
        <Button Content="Login" Background="#222222" Foreground="White" FontSize="20" Height="39" Canvas.Left="409" Canvas.Top="511" Width="84"/>
    </Canvas>
</Window>
